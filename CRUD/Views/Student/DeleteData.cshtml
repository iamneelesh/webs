@model CRUDDemo.Models.Student
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete Details by id</title>
    <link rel="stylesheet" href="~/Content/ShowAllStudentDetails.css" />

</head>
